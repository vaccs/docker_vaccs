#!/bin/bash
while getopts "urmsft" opt
do
case $opt in 
    u) USER_OPT="-user-code-only ";;
    r) REG_OPT="-monitor-registers ";;
    m) MALLOC_OPT="-malloc-free ";;
    s) SECURE_OPT="-secure-data ";;
    f) FILE_OPT="-file-ops" ;;
    t) DWARF_OPT="-test-dwarf";;
    ?) echo "Usage: pas [-u] [-r] [-m] [-s] [-f] [-t] <executable> [executable args]"
       exit 1;;
esac
done
shift $((OPTIND-1))
pin -t ../lib/pas_analysis.so $USER_OPT $REG_OPT $MALLOC_OPT $SECURE_OPT $FILE_OPT $DWARF_OPT -- $@
